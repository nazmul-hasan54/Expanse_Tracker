@model expanse_Tracker.Models.Login

@{
    ViewData["Title"] = "login";
}

<h1 class="text-danger ml-3">Login Here</h1>


<div class="row">
    <div class="col-md-7 mt-lg-5">
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" form-group">
                <label asp-for="Email" class="col-2"></label>
                <input asp-for="Email" class="col-5" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-2"></label>
                <input asp-for="Password" class="col-5" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-left:120px">
                <input  type="checkbox" asp-for="RememberMe" />&nbsp;<label  asp-for="RememberMe"></label>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Login" class="btn btn-primary" />&nbsp;
                <button asp-action="signup" asp-controller="Account" value="go to signup" class="btn btn-link" ></button>
            </div>           
        </form>
    </div>
    <div class="col-5 mb-lg-5">
        <img src="/Images/login.png" width="400" height="300" />
    </div>
    
</div>



