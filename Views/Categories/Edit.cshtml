@model expanse_Tracker.Models.ExpenseCategory
@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-12">
        <h2 class="mb-3">Edit Category</h2>
        <form asp-action="CreateorEdit" asp-controller="Categories" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row mb-2">
                <label asp-for="CategoryName" class="col-form-label col-2">Category Name</label>
                <div class="col-6">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Categories">Back to List</a>
</div>


