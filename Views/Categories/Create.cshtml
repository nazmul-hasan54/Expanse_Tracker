@model expanse_Tracker.Models.ExpenseCategory
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-12">
        <h2 class="mb-3">Add New Category</h2>
        <form asp-action="CreateorEdit" asp-controller="Categories" method="post">
            <div class="row mb-2">
                <label asp-for="CategoryName" class="col-form-label col-2"> Category Name</label>
                <div class="col-6">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-10 offset-2">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div class="container mb-4">
    <a asp-action="Index" asp-controller="Categories" class="btn btn-outline-primary btn-sm">Back To List</a>
</div>

